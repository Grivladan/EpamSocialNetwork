@using PagedList;
@using PagedList.Mvc;
@model IPagedList<SocialNetwork.DataAccess.Entities.ApplicationUser>

@{
    ViewBag.Title = "GetAllUsers";
}

<link href='@Url.Content("~/Content/themes/base/all.css")' rel="stylesheet" type="text/css" />

<h2>List of users</h2>

@using (Html.BeginForm("Search", "Home"))
{
    <p>
        <div class = "row"> 
            FirstName: @Html.TextBox("searchString", null, new { id = "txtSearch" }) 
            <input type="submit" value="Filter" /> 
        </div>
    </p>
}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.First().Profile.UserPhoto)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().Profile.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().Profile.LastName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            <img src="@Url.Action("UserPhotos", "Profile", new { id = item.Id})" height="58" width="58" id="profilePhoto" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Profile.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Profile.LastName)
        </td>
        <td>
            <a href="@Url.Action("Create", "Message", new { id = item.Id }, null)" class="btn btn-success">
                Send message
                <span class="glyphicon glyphicon-envelope" aria-hidden="true"></span>
            </a>
            <a href="@Url.Action("AddFriend", new { id = item.Id })" class="btn btn-primary">
                Add friend
                <span class="glyphicon glyphicon-plus-sign" aria-hidden="true"></span>
            </a>
    </tr>
}

</table>

<div class="col-md-10">
    <div class="center">
        @Html.PagedListPager(Model, page => Url.Action("GetAllUsers", new { page, pageSize = Model.PageSize}))
    </div>
</div>

<script src='@Url.Content("~/Scripts/jquery-3.1.1.min.js")' type="text/javascript"></script>
<script src='@Url.Content("~/Scripts/jquery-ui-1.12.1.min.js")' type="text/javascript"></script>

<script type="text/javascript">
    jQuery.noConflict();
    (function ($) {
        $(function () {
            $("#txtSearch").autocomplete({
                source: '@Url.Action("AutocompleteSearch", "Home")',
                minLength: 1
            });
        });
    })(jQuery);
</script>

