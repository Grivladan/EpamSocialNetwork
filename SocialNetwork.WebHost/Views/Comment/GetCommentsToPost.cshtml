@model IEnumerable<SocialNetwork.DataAccess.Entities.Comment>

@{
    Layout = null;
}

<div class="comments">
    <ul class="list-unstyled">
        @foreach (var comment in Model) { 
            <li>
                <p>
                    <span class="commentor">@comment.ApplicationUser.Profile.FirstName</span>
                    <span>@comment.Text</span>
                </p>
                <p class=" no-pad-bottom date-posted">Posted @comment.CommentDate</p>
            </li>
        }
    </ul>
</div>
